<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cameraBearing="90"
        app:cameraTargetLat="19.122128362793248"
        app:cameraTargetLng="-104.33868795635321"
        app:cameraTilt="30"
        app:cameraZoom="25"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mapType="satellite"
        app:uiCompass="false"
        app:uiRotateGestures="true"
        app:uiScrollGestures="true"
        app:uiTiltGestures="true"
        app:uiZoomControls="false"
        app:uiZoomGestures="true"
        tools:context=".MainActivity" />

    <Button
        android:id="@+id/btn_ver_reportes"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginHorizontal="1dp"
        android:backgroundTint="#C23A3A"
        android:text="Ver Reportes"
        android:textColor="@color/white"
        android:tooltipText="Ver reportes"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/map"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:icon="@drawable/report"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        />

    <TextView
        android:id="@+id/txtdireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btn_crear_reporte"
        android:layout_width="60dp"
        android:layout_height="73dp"
        android:backgroundTint="#C23A3A"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:tooltipText="Crear reporte"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_ver_reportes"
        app:layout_constraintEnd_toEndOf="@+id/map"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="@+id/map"
        app:layout_constraintTop_toTopOf="@+id/map"
        app:layout_constraintVertical_bias="0.935" />

    <Button
        android:id="@+id/btnPerfil"
        android:layout_width="60dp"
        android:layout_height="73dp"
        android:backgroundTint="#C23A3A"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:tooltipText="Perfil"
        app:icon="@drawable/user"
        app:iconGravity="start"
        app:iconTint="@color/white"
        app:cornerRadius="100dp"
        app:iconSize="75px"
        app:layout_constraintBottom_toTopOf="@+id/btn_ver_reportes"
        app:layout_constraintEnd_toEndOf="@+id/map"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="@+id/map"
        app:layout_constraintTop_toTopOf="@+id/map"
        app:layout_constraintVertical_bias="0.809" />



</androidx.constraintlayout.widget.ConstraintLayout>
